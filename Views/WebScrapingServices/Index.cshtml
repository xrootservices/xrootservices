<script>
    document.querySelectorAll('.accordion_head').forEach((head) => {
      head.addEventListener('click', () => toggleAccordion(head));
      head.addEventListener('keypress', (e) => {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          toggleAccordion(head);
        }
      });
    });

    function toggleAccordion(head) {
      const body = head.nextElementSibling;
      const icon = head.querySelector('.plusminus i');
      const expanded = head.getAttribute('aria-expanded') === 'true';

      // Collapse all others
      document.querySelectorAll('.accordion_head').forEach(otherHead => {
        if (otherHead !== head) {
          otherHead.setAttribute('aria-expanded', 'false');
          otherHead.nextElementSibling.style.display = 'none';
          otherHead.nextElementSibling.setAttribute('aria-hidden', 'true');
          const otherIcon = otherHead.querySelector('.plusminus i');
          otherIcon.classList.remove('fa-minus');
          otherIcon.classList.add('fa-plus');
        }
      });

      // Toggle current
      head.setAttribute('aria-expanded', !expanded);
      body.setAttribute('aria-hidden', expanded);
      body.style.display = expanded ? 'none' : 'block';
      icon.classList.toggle('fa-plus');
      icon.classList.toggle('fa-minus');
    }
</script>
